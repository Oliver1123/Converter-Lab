<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="@dimen/abc_button_padding_horizontal_material"
              android:paddingLeft="@dimen/abc_button_padding_horizontal_material"
              android:paddingRight="@dimen/abc_button_padding_horizontal_material">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:id="@+id/tvTitle_OC"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/border_margin_horizontal"
                android:layout_marginStart="@dimen/border_margin_horizontal"
                android:layout_marginTop="@dimen/border_margin_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRegionTitle_OC"
                android:text="RegionTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignLeft="@+id/tvTitle_OC"
                android:layout_alignStart="@+id/tvTitle_OC"
                android:layout_below="@+id/tvTitle_OC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCityTitle_OC"
                android:text="CityTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignLeft="@+id/tvTitle_OC"
                android:layout_alignStart="@+id/tvTitle_OC"
                android:layout_below="@+id/tvRegionTitle_OC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/tvPhone_OC"
                android:layout_below="@+id/tvCityTitle_OC"
                android:layout_alignRight="@+id/tvAddress_OC"
                android:layout_alignEnd="@+id/tvAddress_OC"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAddress_OC"
                android:text="Address"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvPhone_OC"
                android:layout_marginRight="@dimen/border_margin_horizontal"
                android:layout_marginEnd="@dimen/border_margin_horizontal"
                android:layout_marginBottom="@dimen/border_margin_vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_layout_height"
                android:orientation="horizontal"
                android:layout_below="@+id/tvAddress_OC"
                android:background="@color/icon_layout_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivLink_OC"
                    android:src="@drawable/ic_link2"
                    style="@style/menu_icon_style"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivMap_OC"
                    android:src="@drawable/ic_map2"
                    style="@style/menu_icon_style"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="@dimen/border_margin_horizontal"
                    android:paddingRight="@dimen/border_margin_horizontal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivCall_OC"
                    android:src="@drawable/ic_phone2"
                    style="@style/menu_icon_style"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingLeft="@dimen/border_margin_horizontal"
                    android:paddingRight="@dimen/border_margin_horizontal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivMore_OC"
                    android:src="@drawable/ic_next"
                    style="@style/menu_icon_style"
                    android:background="@drawable/ic_more_back"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
