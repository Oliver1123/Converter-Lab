<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/abc_button_padding_horizontal_material"
    android:paddingTop="@dimen/abc_button_padding_horizontal_material">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCurrencyTitle_CI"
            android:text="CurrencyTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/ivAskRate_CI"
                android:src="@mipmap/ic_arrow_up"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/image_view_rate_style"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAskValue_CI"
                android:text="ASK"
                android:layout_alignTop="@+id/ivAskRate_CI"
                android:layout_toRightOf="@+id/ivAskRate_CI"
                android:layout_toEndOf="@+id/ivAskRate_CI"
                android:layout_alignBottom="@+id/ivAskRate_CI"
                android:gravity="center_vertical"/>
            <ImageView
                android:id="@+id/ivBidRate_CI"
                android:src="@mipmap/ic_arrow_up"
                android:layout_below="@+id/ivAskRate_CI"
                android:layout_alignLeft="@+id/ivAskRate_CI"
                android:layout_alignStart="@+id/ivAskRate_CI"
                style="@style/image_view_rate_style"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBidValue_CI"
                android:text="BID"
                android:layout_toRightOf="@+id/ivBidRate_CI"
                android:layout_toEndOf="@+id/ivBidRate_CI"
                android:layout_alignTop="@+id/ivBidRate_CI"
                android:layout_alignBottom="@+id/ivBidRate_CI"
                android:gravity="center_vertical"/>
        </RelativeLayout>

    </RelativeLayout>
